<div id="{{post.id}}" class="expanded-post-container">
    <article class="expanded-post">
        <h1 id="expanded-post-title">{{post.title}}</h1>
        <p id="expanded-post-text">{{post.text}}</p>
        <p id="expanded-post-label">posted by {{post.user.username}} on {{format_date post.createdAt}}</p>
    </article>
    <section class="modify-buttons">
        <button class="button add-reply-btn">Add Reply</button>
        <button class="button view-replies-btn">View Replies</button>
        {{#if isOwner}}
        <button class="button edit-btn">Edit Post</button>
        {{/if}}
        {{#if isOwner}}
        <button class="button delete-btn">Delete Post</button>
        {{/if}}
    </section>
    <div class="column reply-container">
        {{#each post.replies as |reply|}}
        {{> replies}}
        {{/each}}
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="/js/homepage.js"></script>
<script src="/js/post.js"></script>